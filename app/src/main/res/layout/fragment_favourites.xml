<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FavouritesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favourites_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/favourites_text_margin_start"
            android:layout_marginTop="@dimen/favourites_text_margin_top"
            android:fontFamily="@font/nunito_sans_extrabold"
            android:text="@string/favourites"
            android:textColor="@color/dark_blue_primary"
            android:textSize="@dimen/favourites_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/favourites_horizontal_margin"
            android:layout_marginTop="@dimen/favourites_rv_margin_top"
            android:layout_marginEnd="@dimen/favourites_horizontal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/favourites_text">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/favourites_movies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/favourites_rv_padding"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
