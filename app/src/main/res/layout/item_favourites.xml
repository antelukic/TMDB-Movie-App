<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/favourites_image"
        android:layout_width="@dimen/favourites_image_width"
        android:layout_height="@dimen/favourites_image_height"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/favourites_image_horizontal_margin"
        android:layout_marginEnd="@dimen/favourites_image_horizontal_margin"
        android:layout_marginTop="@dimen/favourites_image_vertical_margin"
        android:layout_marginBottom="@dimen/favourites_image_vertical_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView" />

    <ImageView
        android:id="@+id/favourites_favourites_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_margin_all"
        android:src="@drawable/ic_heart"
        app:layout_constraintStart_toStartOf="@id/favourites_image"
        app:layout_constraintTop_toTopOf="@id/favourites_image" />

</androidx.constraintlayout.widget.ConstraintLayout>
